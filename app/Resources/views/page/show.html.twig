{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-md-10">
			<h1>Page</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ page.content }}</td>
            </tr>
        </tbody>
    </table>

			<a class="btn btn-default" href="{{ path('cms_page_index') }}" role="button">Back to the list</a>

			<a class="btn btn-primary" href="{{ path('cms_page_edit', { 'id': page.id }) }}" role="button">Edit</a>

{% endblock %}
