{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-md-10">
			<h1>User</h1>
		</div>
		<div class="col-md-1">
			<div class="col-md-offset-6 col-md-1">
			    {{ form_start(delete_form) }}
					<button type="submit" class="btn btn-danger">Delete</button>
				{{ form_end(delete_form) }}
			</div>
		</div>
	</div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password|slice(0,20) }}</td>
            </tr>
        </tbody>
    </table>
			
	<a class="btn btn-default" href="{{ path('cms_user_index') }}" role="button">Back to the list</a>

	<a class="btn btn-primary" href="{{ path('cms_user_edit', { 'id': user.id }) }}" role="button">Edit</a>

{% endblock %}